							"type": "text"
						},
						{
							"key": "password",
							"value": "{{password}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{protocol}}://{{hostName}}/oauth_token.do",
					"protocol": "{{protocol}}",
					"host": [
						"{{hostName}}"
					],

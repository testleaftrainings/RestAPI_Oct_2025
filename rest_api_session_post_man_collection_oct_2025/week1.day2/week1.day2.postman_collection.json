							"pm.test(\"Validate the Content-Type header has the application/json value\", function (){\r",
							"    var actual = pm.response.headers.get(\"Content-Type\");\r",
							"    console.log(actual);\r",
							"    pm.expect(actual).to.contains(\"application/json\");\r",
							"});\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"console.log(jsonData.result.sys_id);\r",
							"\r",
							"pm.test(\"Validate the sys_id key is present in the response\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.result).to.have.property(\"sys_id\");\r",
							"});\r",
							"\r",
							"pm.test(\"Validate the value of the sys_id\", function () {\r",
							"    var jsonData = pm.response.json();\r",
